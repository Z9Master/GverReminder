                                                <TreeViewItem Header="{Binding event_name}" IsExpanded="True">
                                                    <ListBox x:Name="LB_OneTimeEventSubEvent" ItemsSource="{Binding list_subevent}" BorderBrush="{x:Null}">
                                                        <ListBox.ItemTemplate>
